{
  "name": "RNTemplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "storybook": "storybook start -p 7007",
    "build-storybook": "storybook build",
    "generate": "plop",
    "clean": "cd android && ./gradlew clean && cd .. && cd ios && xcodebuild clean -workspace RNTemplate.xcworkspace -scheme RNTemplate && cd ..",
    "android:debug": "NODE_ENV=development react-native run-android --mode=debug",
    "android:release": "NODE_ENV=production react-native run-android --mode=release",
    "android:staging": "NODE_ENV=staging react-native run-android --mode=staging",
    "ios:debug": "NODE_ENV=development react-native run-ios --configuration=Debug",
    "ios:release": "NODE_ENV=production react-native run-ios --configuration=Release",
    "ios:staging": "NODE_ENV=staging react-native run-ios --configuration=Staging"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-native/new-app-screen": "0.81.0",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.16",
    "@react-navigation/stack": "^6.4.1",
    "axios": "^1.7.9",
    "i18next": "^24.1.0",
    "react": "19.1.0",
    "react-hook-form": "^7.52.1",
    "react-i18next": "^15.0.0",
    "react-native": "0.81.0",
    "react-native-gesture-handler": "^2.17.0",
    "react-native-keychain": "^8.1.3",
    "react-native-localize": "^3.0.4",
    "react-native-reanimated": "^3.12.1",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-size-matters": "^0.4.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-vector-icons": "^10.0.3",
    "yup": "^1.4.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.0",
    "@react-native/eslint-config": "0.81.0",
    "@react-native/metro-config": "0.81.0",
    "@react-native/typescript-config": "0.81.0",
    "@storybook/addon-actions": "^7.6.17",
    "@storybook/addon-controls": "^7.6.17",
    "@storybook/addon-ondevice-notes": "^6.5.6",
    "@storybook/react-native": "^6.5.6",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^9.0.11",
    "jest": "^29.6.3",
    "lint-staged": "^15.2.5",
    "plop": "^4.0.1",
    "prettier": "2.8.8",
    "react-native-dotenv": "^3.4.11",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
